{
  "name": "with-firebase-hosting-and-typescript",
  "version": "1.0.0",
  "description": "Host Next.js SSR app on Firebase Cloud Functions with Firebase Hosting redirects. Built with typescript.",
  "engines": {
    "node": "10"
  },
  "scripts": {
    "dev": "next src/app",
    "preserve": "yarn build-public && yarn build-functions && yarn build-app && yarn copy-deps && yarn install-deps",
    "serve": "cross-env NODE_ENV=production firebase serve",
    "deploy": "firebase deploy",
    "clean": "rimraf \"dist/functions\" && rimraf \"dist/public\"",
    "build-app": "next build \"src/app\"",
    "build-public": "cpx \"src/public/**/*.*\" \"dist/public\" -C",
    "build-functions": "tsc --project src/functions",
    "lint-app": "tslint --project src/app --fix",
    "typecheck-app": "tsc --project src/app",
    "lint-functions": "tslint --project src/functions --fix",
    "copy-deps": "cpx \"*{package.json,package-lock.json,yarn.lock}\" \"dist/functions\" -C",
    "install-deps": "cd \"dist/functions\" && yarn"
  },
  "dependencies": {
    "firebase-admin": "^8.9.0",
    "firebase-functions": "^3.1.0",
    "next": "latest",
    "react": "16.8.6",
    "react-dom": "16.8.6"
  },
  "devDependencies": {
    "@deboxsoft/cpx": "^1.5.0",
    "@types/node": "12.0.12",
    "@types/react": "^16.6.0",
    "@types/react-dom": "16.8.4",
    "cross-env": "5.2.0",
    "firebase-tools": "^7.1.0",
    "rimraf": "2.6.2",
    "tslint": "^5.11.0",
    "tslint-react": "^3.6.0",
    "typescript": "^3.2.0"
  }
}
